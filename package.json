{
  "name": "csshot",
  "private": true,
  "scripts": {
    "apply": "yarn run hasura:apply && yarn run compose:dev",
    "update:version": "lerna version --no-push",
    "reinstall": "lerna clean --yes && yarn",
    "docker:dev": "docker-compose -f docker-compose.dev.yaml -p csshot_dev up --build -d",
    "docker:prod": "docker-compose up --build -d",
    "apply:hasura": "cd services/hasura && hasura metadata apply",
    "export:hasura": "cd services/hasura && hasura metadata export"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "lerna": "^3.20.2"
  }
}
