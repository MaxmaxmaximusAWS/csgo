.game
  background-color rebeccapurple
  color white
  size 18em 10em
  display flex
  flex-direction column
  justify-content center
  align-items center
  position relative
  flex-shrink 0

  .pending
    background-color red

  .playing
    //background-color green
    display flex
    flex-direction column
    align-items center

    .playing-x
      background-color #ae00db
      font-size 2em
      padding 0.2em 0.4em
      font-weight 900
      font-family monospace
      z-index 2


  .show
    background-color cornflowerblue
    animation crash 0.5s infinite alternate
    font-size 3em
    font-weight 900
    padding 0.2em 0.5em
    font-family monospace


@keyframes spin
  from
    transform rotateZ(0deg)
  to
    transform rotateZ(360deg)


@keyframes crash
  from
    transform scale(1)
  to
    transform scale(1.2)


.progress-bar
  background-color blueviolet
  absolute top left
  width 100%
  height 2em






