.popup
  $time = 0.3s
  background-color rgba(black, 0.8)
  absolute top left
  size 100%
  z-index 1000
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition opacity $time
  pointer-events none
  opacity 0
  user-select none

  &.__opened
    opacity 1
    pointer-events all

    .content
      transform none
      //
      //> *
      //  transform none

  &.__full-size

    .content
      width calc(100% - 6em)
      height calc(100% - 3em)

  .content
    background-color #222
    transition transform $time
    border-radius 0.25em
    display flex
    flex-direction column
    align-items center
    margin 3em
    user-select text
    color white
    transform scale(0.9)
    max-width calc(100% - 6em)
    max-height calc(100% - 3em)
    border 1px solid #444
    overflow hidden
