.popup
  $t = 0.3s
  background-color rgba(black, 0.8)
  absolute top left
  size 100%
  z-index 1000
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition opacity $t
  pointer-events none
  opacity 0
  user-select none

  &.__opened
    opacity 1
    pointer-events all

    .content
      transform none

  .content
    background-color #222
    transition transform $t
    transform scale(0.7)
    border-radius 0.25em
    padding 1em
    user-select text
    color white
    border 1px solid #444



