.MobileChatContent
  $time = 0.2s
  size 100%
  transform translateX(105%)
  transform-origin top right
  transition transform $time, opacity $time
  pointer-events none
  background-color #2C3255
  border-radius 2em 2em 0 0
  overflow hidden
  display flex
  flex-direction column
  box-shadow 0 0 1em rgba(black, 0.3)

  &.__opened
    transform none
    pointer-events all
    opacity 1
