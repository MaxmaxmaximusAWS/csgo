.MobileHeader
  $time = 0.3s
  absolute top left
  size 100%
  z-index 999
  display flex
  flex-direction column
  transition background-color $time
  pointer-events none

  &.__opened
    background-color rgba(#202440, 0.7)

    .panel

      .loginButtonInPanel
        opacity 0

    .content
      pointer-events all

      & *
        transform none !important

  .panel
    display flex
    flex-direction row
    justify-content space-between
    z-index 1
    height 3em
    padding 1em
    align-items center
    pointer-events all

    .loginButtonInPanel
      transition opacity $time


  .content
    transition transform $time
    transform-origin top right
    flex-grow 1
    pointer-events none

    .loginButtonInContent
      width 100%
      display flex
      flex-direction row
      justify-content center
      margin-top 5em

    & *
      transform translateX(10em)

      for i in (0...20)
        &:nth-child({i})
          transition transform $time + (0.1s * (i - 1))


